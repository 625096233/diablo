<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- console output -->
    <appender name="output" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="output" />
    </root>

</configuration>